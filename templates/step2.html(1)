      background-color: rgba(255,255,255,0.05);
      border-radius: 12px;
      margin: 20px auto;
      max-width: 1000px;
    }

    .grupo-selector button {
      margin: 5px;
      padding: 10px 20px;
      border: none;
      border-radius: 50px;
      background-color: #333;
      color: white;
      cursor: pointer;
      font-weight: bold;
      transition: background-color 0.2s ease;
    }

    .grupo-selector button:hover {
      background-color: #555;
    }

    .preview-img {
      width: 100%;
